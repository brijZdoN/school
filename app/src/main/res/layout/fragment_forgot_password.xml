<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:clickable="true"
    tools:context=".SIGNIN.ForgotPassword">
    <include
        layout="@layout/toobar_layout"
        android:id="@+id/toolbar"/>
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/logo"
        android:src="@drawable/lo"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/logo"
    android:text="Enter email address to send email for reset Password"
    android:textStyle="italic"
    android:textSize="20sp"
    android:gravity="center"
    android:id="@+id/text"
    android:layout_marginTop="50dp"
    android:textColor="#000000"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="10dp"
        android:textColorHint="#e92812"
        android:hint="Enter Email Address"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/forogtemail"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forogtemail"
        android:background="#e45353"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:id="@+id/sendmail"
        android:text="Send"/>


</RelativeLayout>